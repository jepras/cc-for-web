{
  "name": "mcp-app-demo",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP App Demo - Interactive UI for Claude",
  "license": "MIT",
  "scripts": {
    "build": "cross-env INPUT=mcp-app.html vite build",
    "serve": "bun --watch main.ts",
    "start": "npm run build && npm run serve",
    "dev": "concurrently 'cross-env INPUT=mcp-app.html vite build --watch' 'npm run serve'"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "bun": "^1.2.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "typescript": "^5.9.0",
    "vite": "^6.0.0",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
